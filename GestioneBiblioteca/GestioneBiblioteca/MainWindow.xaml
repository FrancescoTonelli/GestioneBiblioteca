        xmlns:local="clr-namespace:GestioneBiblioteca"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1159.016">
    <Grid>
        <Label Content="Elenco Libri:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstLibri" HorizontalAlignment="Left" Height="340" VerticalAlignment="Top" Width="298" Margin="10,41,0,0"/>
        <Label Content="Dati biblioteca:" HorizontalAlignment="Left" Margin="511,10,0,0" VerticalAlignment="Top"/>
        <Label Content="Nome:" HorizontalAlignment="Left" Margin="441,42,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblNome" Content="" HorizontalAlignment="Left" Margin="491,42,0,0" VerticalAlignment="Top" Width="171"/>
        <Label Content="Indirizzo:" HorizontalAlignment="Left" Margin="441,73,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblIndirizzo" Content="" HorizontalAlignment="Left" Margin="504,73,0,0" VerticalAlignment="Top" Width="171"/>
        <Label Content="Orario:" HorizontalAlignment="Left" Margin="441,104,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblOrario" Content="" HorizontalAlignment="Left" Margin="491,104,0,0" VerticalAlignment="Top" Width="171"/>
        <Label Content="Scrivere i dati del libro che si vuole aggiungere, scrivendolo come: &#xD;&#xA;nome/autore/anno di pubblicazione/editore/numero di pagine:" HorizontalAlignment="Left" Margin="313,155,0,0" VerticalAlignment="Top" Height="47" Width="469"/>
        <TextBox x:Name="txtCrea" HorizontalAlignment="Left" Height="23" Margin="313,207,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="362"/>
        <Button x:Name="btnCrea" Content="Crea" HorizontalAlignment="Left" Margin="695,207,0,0" VerticalAlignment="Top" Width="75" Click="btnCrea_Click"/>
        <Label Content="N libri:" HorizontalAlignment="Left" Margin="10,386,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblN" Content="" HorizontalAlignment="Left" Margin="60,386,0,0" VerticalAlignment="Top" Width="40"/>
