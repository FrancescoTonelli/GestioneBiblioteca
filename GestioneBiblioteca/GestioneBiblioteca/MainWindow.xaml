        <TextBox x:Name="txtTitolo" HorizontalAlignment="Left" Height="23" Margin="421,261,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCercaTitolo" Content="Cerca" HorizontalAlignment="Left" Margin="570,264,0,0" VerticalAlignment="Top" Width="75" Click="btnCercaTitolo_Click"/>
        <Label Content="Posizione:" HorizontalAlignment="Left" Margin="329,299,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblPosTitolo" Content="" HorizontalAlignment="Left" Margin="396,299,0,0" VerticalAlignment="Top" Width="78"/>
        <Label Content="Inserisci un autore:" HorizontalAlignment="Left" Margin="736,257,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTitolo_Copy" HorizontalAlignment="Left" Height="23" Margin="844,261,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCercaAutore" Content="Cerca" HorizontalAlignment="Left" Margin="993,264,0,0" VerticalAlignment="Top" Width="75" Click="btnCercaAutore_Click"/>
        <Label Content="Titoli:" HorizontalAlignment="Left" Margin="752,299,0,0" VerticalAlignment="Top"/>
        <ListBox x:Name="lstLibriAutore" HorizontalAlignment="Left" Height="100" Margin="826,299,0,0" VerticalAlignment="Top" Width="213"/>

    </Grid>
</Window>
